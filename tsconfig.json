{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["*"] },              // tiny cleanup; same effect as "./*"
    "moduleResolution": "bundler",          // Next.js + TS5 recommended
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,                        // consider true (see below)
    "allowJs": true,
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".next", "archive", ".vercel"]
}
